# App mode
VIDEO2ASCII_FREE_MODE=true
VIDEO2ASCII_TRANSCRIBE_PROVIDER=local

# Shared token signing secret used by:
# - /api/billing/free-token (issuer)
# - /api/transcribe (token validation)
# - /api/export/* (token validation in export API)
VIDEO2ASCII_FREE_ISSUER_SECRET=replace-with-long-random-secret
VIDEO2ASCII_FREE_TOKEN_TTL_SECONDS=86400

# Optional browser origin allowlist for free token endpoint
# Comma-separated origins (empty allows any origin)
VIDEO2ASCII_FREE_ALLOWED_ORIGINS=

# Optional internal header guard when using worker-proxy local transcription
VIDEO2ASCII_LOCAL_TRANSCRIBE_SECRET=

# Export API
VIDEO2ASCII_EXPORT_TOKEN=replace-with-static-fallback-token
VIDEO2ASCII_CORS_ALLOW_ORIGINS=*
VIDEO2ASCII_MAX_REQUEST_BYTES=20000000
VIDEO2ASCII_MAX_CHARS_PER_FRAME=20000
VIDEO2ASCII_RATE_LIMIT_PER_MINUTE=20

# Legacy paid-mode vars (ignored in free mode unless you wire paid stack)
TOKEN_SIGNING_SECRET=
OPENAI_API_KEY=
CORS_ALLOW_ORIGINS=*
